# Base image: stable Node LTS for production use
FROM node:24-slim

# Set working directory inside container
WORKDIR /app

# Copy only package definition files first, to allow better Docker caching
COPY package.json package-lock.json ./

# Install dependencies reproducibly
RUN npm ci

# Copy all source code
COPY . .

# Build the Nuxt 4 app in production mode
RUN npm run build

# Environment variables that our app will use
ENV NODE_ENV=production
ENV NITRO_HOST=0.0.0.0
ENV PORT=3000

# Expose the Nuxt runtime port
EXPOSE 3000

# Create a non-root user for improved security
RUN groupadd -r appuser && useradd -r -g appuser appuser

# Change ownership of the app files to the new user
RUN chown -R appuser:appuser /app

# Switch to the non-root user for running the app
USER appuser

# Command to run the app in production
CMD ["node", ".output/server/index.mjs"]
